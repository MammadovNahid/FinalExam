@model List<OurTeam>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Employee Table</h4>
                <a asp-controller="team" asp-action="create" class="btn btn-success">Create</a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Surname
                                </th>
                                <th>
                                    Profession
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/img/@item.Image"/>
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Surname
                                    </td>
                                    <td>
                                        @item.Profession
                                    </td>
                                    <td>
                                        <a asp-controller="team" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                        <a asp-controller="team" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                                    </td>
                                    
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
